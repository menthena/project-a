{
  "name": "essential-react",
  "version": "0.5.0",
  "description": "A minimal skeleton for building testable React apps using Babel",
  "main": "src/main.js",
  "scripts": {
    "postinstall": "npm run build",
    "server": "node start.js",
    "api": "json-server --watch db.json --port 3000",
    "build": "webpack -p --progress --config webpack.production.config.js",
    "test": "nyc ava --watch",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rm build/app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pheuter/essential-react.git"
  },
  "keywords": [
    "skeleton",
    "template",
    "react",
    "quickstart"
  ],
  "ava": {
    "files": [
      "src/**/*-test.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "author": "Mark Fayngersh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pheuter/essential-react/issues"
  },
  "homepage": "https://github.com/pheuter/essential-react",
  "devDependencies": {
    "autoprefixer": "^6.0.2",
    "ava": "^0.16.0",
    "babel-jest": "*",
    "babel-polyfill": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "coveralls": "^2.11.2",
    "css-loader": "^0.18.0",
    "deep-freeze": "0.0.1",
    "enzyme": "^2.4.1",
    "extract-text-webpack-plugin": "^0.8.2",
    "jest-cli": "*",
    "jsdom": "9.8.0",
    "jsdom-global": "2.1.0",
    "json-server": "^0.8.22",
    "nock": "^8.1.0",
    "nyc": "^5.6.0",
    "postcss-loader": "^0.6.0",
    "postcss-nested": "^1.0.0",
    "react-addons-test-utils": "15.3.2",
    "react-hot-loader": "^1.3.0",
    "react-test-renderer": "^15.3.2",
    "redux-devtools": "^3.3.1",
    "redux-mock-store": "^1.2.1",
    "sinon": "^1.17.6",
    "style-loader": "^0.12.3",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "es6-promise": "^4.0.5",
    "express": "^4.12.3",
    "isomorphic-fetch": "^2.2.1",
    "keymirror": "^0.1.1",
    "mocha": "^3.1.0",
    "react": "^15.0.1",
    "react-addons-perf": "^15.3.2",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.6",
    "redux": "^3.6.0",
    "redux-throttle": "^0.1.1",
    "redux-thunk": "^2.1.0"
  }
}
